import java.rmi.RemoteException;
import java.rmi.server.UnicastRemoteObject;


public class PlayerScores  extends UnicastRemoteObject implements java.io.Serializable
{
	/**
	 * 
	 */
	private static final long serialVersionUID = 1L;
	
	private int playerID;
	private int quizId;
	private int score; 
	
	public PlayerScores(int quizId, int playerID, int score) throws RemoteException 
	{
		this.playerID = playerID;
		this.quizId = quizId;
		this.score = score;
	}
	
	public int getQuizID() throws RemoteException
	{
		return quizId;
	}
	
	public int getScore()  throws RemoteException
	{
		return score;
	}
	
	
	public int getPlayerId() throws RemoteException
	{
		return playerID;
	}
	
}
